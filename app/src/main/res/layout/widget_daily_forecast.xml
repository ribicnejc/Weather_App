            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/widget_daily_forecast_temp3"
                android:textColor="@color/colorLightGray"
                android:text="20°"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:id="@+id/widget_daily_forecast_main4"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="@color/colorLightGray"
                android:id="@+id/widget_daily_forecast_day4"
                android:textAlignment="center" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/forcast_five_days_icon"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sun"
                android:id="@+id/widget_daily_forecast_icon4"
                android:layout_height="@dimen/widget_forecast_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/widget_daily_forecast_temp4"
                android:textColor="@color/colorLightGray"
                android:text="20°"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/widget_daily_forecast_main5"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="@color/colorLightGray"
                android:id="@+id/widget_daily_forecast_day5"
                android:textAlignment="center" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/forcast_five_days_icon"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sun"
                android:id="@+id/widget_daily_forecast_icon5"
                android:layout_height="@dimen/widget_forecast_icon" />
