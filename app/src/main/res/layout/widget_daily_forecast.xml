<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_weight="1.2"
    android:visibility="visible"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:id="@+id/widget_daily_forecast_main1"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="@color/colorLightGray"
                android:id="@+id/widget_daily_forecast_day1"
                android:textAlignment="center" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/forcast_five_days_icon"
                android:layout_gravity="center_horizontal"
                android:id="@+id/widget_daily_forecast_icon1"
                android:src="@drawable/sun"
                android:layout_height="@dimen/widget_forecast_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/widget_daily_forecast_temp1"
                android:textColor="@color/colorLightGray"
                android:text="20°"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:id="@+id/widget_daily_forecast_main2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="@color/colorLightGray"
