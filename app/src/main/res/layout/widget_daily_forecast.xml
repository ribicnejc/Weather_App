                android:textAlignment="center" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/forcast_five_days_icon"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sun"
                android:id="@+id/widget_daily_forecast_icon2"
                android:layout_height="@dimen/widget_forecast_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/widget_daily_forecast_temp2"
                android:textColor="@color/colorLightGray"
                android:text="20°"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:id="@+id/widget_daily_forecast_day3"
                android:textColor="@color/colorLightGray"
