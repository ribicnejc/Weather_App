<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/google_plus_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/error" />
        <TextView
            android:id="@+id/google_plus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/google_plus_img"
            android:text="Nejc Ribic"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@id/google_plus_name"
            android:id="@+id/google_plus_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nejc.ribic95@gmail.com"
            android:textSize="13sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/google_plus_name"
            android:layout_alignParentEnd="true"
            android:text="Logout"/>
    </RelativeLayout>
</LinearLayout>