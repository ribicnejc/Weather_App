<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/day1_main"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/forcast_fice_days_margin"
            android:layout_marginLeft="@dimen/forcast_fice_days_margin"
            android:text="Friday"
            android:id="@+id/day1"
            android:textColor="@color/colorForeCast"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/forcast_five_days_font"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:gravity="end"
            android:layout_width="@dimen/forcast_five_days_icon"
            android:layout_height="@dimen/forcast_five_days_icon"
            android:src="@drawable/sun"
            android:id="@+id/day1_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forcast_five_days_font"
            android:textColor="@color/colorForeCast"
            android:text="60°"
            android:id="@+id/day1_temp_max"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/day1_temp_min"
            android:layout_toStartOf="@+id/day1_temp_min" />
        <TextView
            android:id="@+id/day1_temp_min"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorForeCastCold"
            android:textSize="@dimen/forcast_five_days_font"
            android:layout_marginRight="@dimen/forcast_fice_days_margin"
            android:text="50°"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
