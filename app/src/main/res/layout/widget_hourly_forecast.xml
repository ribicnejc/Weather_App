<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/widget_daily_forecast_main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorLightGray"
            android:text="15:00"
            android:layout_gravity="center_horizontal"
            android:id="@+id/widget_daily_forecast_time1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/widget_daily_icon"
            android:contentDescription="@string/add_city"
            android:src="@drawable/sun"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/widget_daily_icon" />
        <TextView
            android:textColor="@color/colorLightGray"
            android:textAlignment="center"
            android:text="20°"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorLightGray"
            android:textAlignment="center"
            android:text="20°"
            android:textSize="10sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>