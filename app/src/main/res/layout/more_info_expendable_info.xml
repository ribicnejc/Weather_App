<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/wind_mills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/more_info_wind_mill1"
                android:layout_width="@dimen/expendable_info_icon_size"
                android:layout_height="@dimen/expendable_info_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/wind_mill" />

            <ImageView
                android:id="@+id/more_info_wind_mill2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/more_info_wind_mill1"
                android:layout_marginStart="-5dp"
                android:layout_toEndOf="@+id/more_info_wind_mill1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/wind_mill" />
        </RelativeLayout>

        <TextView
            android:id="@+id/more_info_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/below_image"
            android:text="1.02kmh"
            android:textColor="@color/colorGrayLight" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/expendable_info_icon_size"
            android:layout_height="@dimen/expendable_info_icon_size"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pressure" />

        <TextView
            android:id="@+id/more_info_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/below_image"
            android:text="@string/app_name"
            android:textColor="@color/colorGrayLight" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/expendable_info_icon_size"
            android:layout_height="@dimen/expendable_info_icon_size"
            android:contentDescription="@string/app_name"
            android:src="@drawable/humidity" />

        <TextView
            android:id="@+id/more_info_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/below_image"
            android:text="@string/app_name"
            android:textColor="@color/colorGrayLight" />
    </LinearLayout>
</LinearLayout>