<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_info_main_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:background="@color/colorGray"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/infoMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Clear"
            android:textColor="@color/colorGrayLight"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/descMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/infoMoreInfo"
            android:text="scatterred clouds and sun and blablabla"
            android:textColor="@color/colorGrayLight"
            android:textSize="20sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iconMoreInfo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0.1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/snow" />

    <TextView
        android:id="@+id/more_info_main_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="23Â°"
        android:textAlignment="textEnd"
        android:textColor="@color/colorGrayLight"
        android:textSize="35sp" />

</LinearLayout>